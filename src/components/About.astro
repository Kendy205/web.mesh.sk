---
  import SectionHeading from "./SectionHeading.astro";
  import Item from "./Item.astro";
  import {Language} from "../types"
  const { text, title} = Astro.props as Language["about"]
---


<section class="mb-32" id="about" data-aos="fade-up" data-aos-delay="200">
  <SectionHeading  data-aos-delay="200">O nás</SectionHeading>
  <div class="grid lg:grid-cols-4 grid-cols-2 gap-4">
    <Item title="Jednostránkové stránky" icon="language">Specializujeme se na tvorbu webů</Item>
    <Item>Mnohostránkové stránky</Item>
    <Item>Eshopy</Item>
    <Item>SEO optimalizace</Item>
    <Item>Správa webhostingu a domén</Item>
  </div>
</section>